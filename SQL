-- create tables
create table cliente (
    id                             number generated by default on null as identity 
                                   constraint cliente_id_pk primary key,
    first_name                     varchar2(255 char),
    address                        varchar2(4000 char),
    phone_number                   number,
    email                          varchar2(255 char)
)
;

create table pedido (
    cliente_id                     number
                                   constraint pedido_cliente_id_fk
                                   references cliente on delete cascade,
    code                           number generated by default on null as identity 
                                   constraint pedido_code_pk primary key,
    purchase_date                  date,
    id_producto                    number
                                   constraint pedido_id_producto_fk
                                   references producto on delete cascade
)
;

-- table index
create index pedido_i1 on pedido (cliente_id);
create index pedido_i2 on pedido (id_producto);

create table producto (
    id                             number generated by default on null as identity 
                                   constraint producto_id_pk primary key,
    name                           varchar2(255 char),
    price                          number
)
;

